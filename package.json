{
  "name": "skillswap",
  "version": "1.0.0",
  "description": "SkillSwap - AI-powered peer-to-peer learning platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"bgBlue.bold,bgMagenta.bold\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ..",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "fresh-install": "npm run clean && npm run install:all"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
